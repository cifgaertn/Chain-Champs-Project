{
  "name": "FactoryBot DFINITY Dev Environment",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "motoko-lang.motoko",
        "dfinity.vscode-dfinity",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "remoteUser": "node",
  "postCreateCommand": "npm install",
  "containerEnv": {
    "DFX_VERSION": "0.19.2"
  },
  "forwardPorts": [8000]
}
